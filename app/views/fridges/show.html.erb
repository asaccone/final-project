<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Fridge #<%= @fridge.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/fridges" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_fridge/<%= @fridge.id %>" class="btn btn-block btn-outline-secondary">
          Delete fridge
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @fridge.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@fridge.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@fridge.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit fridge
    </h2>

    <form action="/modify_fridge/<%= @fridge.id %>"  method="post" >
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control" value="<%= @fridge.name %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update fridge
      </button>
    </form>
  </div>
</div>

<hr>
