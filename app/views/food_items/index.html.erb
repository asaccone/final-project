<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all food items
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new food item
    </h2>

    <form action="/insert_food_item" method="post">
      <div class="form-group">
        <label for="fridge_id_box">
          Fridge
        </label>

        <input type="text" id="fridge_id_box" name="query_fridge_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="food_type_box">
          Food type
        </label>

        <input type="text" id="food_type_box" name="query_food_type" class="form-control">
      </div>

      <div class="form-group">
        <label for="expiration_date_box">
          Expiration date
        </label>

        <input type="date" id="expiration_date_box" name="query_expiration_date" class="form-control">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="message1_sent_box" name="query_message1_sent" value="1">

        <label class="custom-control-label" for="message1_sent_box">Message1 sent</label>
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="message2_sent_box" name="query_message2_sent" value="1">

        <label class="custom-control-label" for="message2_sent_box">Message2 sent</label>
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="message3_sent_box" name="query_message3_sent" value="1">

        <label class="custom-control-label" for="message3_sent_box">Message3 sent</label>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create food item
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Fridge
        </th>

        <th>
          Owner
        </th>

        <th>
          Food type
        </th>

        <th>
          Expiration date
        </th>

        <th>
          Message1 sent
        </th>

        <th>
          Message2 sent
        </th>

        <th>
          Message3 sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @food_items.each do |food_item| %>
      <tr>
        <td>
          <%= food_item.id %>
        </td>

        <td>
          <%= food_item.fridge_id %>
        </td>

        <td>
          <%= food_item.owner_id %>
        </td>

        <td>
          <%= food_item.food_type %>
        </td>

        <td>
          <%= food_item.expiration_date %>
        </td>

        <td>
          <%= food_item.message1_sent %>
        </td>

        <td>
          <%= food_item.message2_sent %>
        </td>

        <td>
          <%= food_item.message3_sent %>
        </td>

        <td>
          <%= time_ago_in_words(food_item.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(food_item.updated_at) %> ago
        </td>

        <td>
          <a href="/food_items/<%= food_item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
